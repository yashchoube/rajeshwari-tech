{
  "name": "rajeshwari-tech-tests",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for RajeshwariTech website",
  "scripts": {
    "test": "jest",
    "test:ui": "playwright test",
    "test:api": "jest tests/api",
    "test:newsletter": "jest tests/newsletter",
    "test:integration": "jest tests/integration",
    "test:performance": "k6 run tests/performance/load/load-test.js",
    "test:security": "jest tests/security",
    "test:all": "npm run test:ui && npm run test:api && npm run test:newsletter && npm run test:integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "npm run test:all -- --ci"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "supertest": "^6.3.3",
    "k6": "^0.0.0",
    "puppeteer": "^21.5.2",
    "selenium-webdriver": "^4.15.0",
    "cypress": "^13.6.0",
    "testcafe": "^3.0.0",
    "axe-core": "^4.8.0",
    "lighthouse": "^11.4.0",
    "pa11y": "^7.0.0",
    "mailosaur": "^9.0.0",
    "nodemailer": "^6.9.7",
    "faker": "^6.6.6",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}
